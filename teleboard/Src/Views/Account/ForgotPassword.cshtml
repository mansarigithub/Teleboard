@model Teleboard.Models.ForgotPasswordViewModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = Resources.DidYouForgetYourPassword;
}
@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-header">
            <b>@Resources.AppName</b> - @Resources.DidYouForgetYourPassword
        </div>
        <div class="card-block">
            @if (Model.ShowEmailSentMessage)
            {
                <div class="alert alert-success" role="alert">
                    @Resources.CheckYourEmailToResetPassword
                </div>
            }
            <div class="form-group row">
                <label for="Email">Email address</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="form-group row">
                <button type="submit" class="btn btn-primary form-control">@Resources.EmailResetLink</button>
            </div>

            <div class="form-group row">
                @Html.ActionLink("Return to login page", "Login", "Account", new { @class = "btn btn-link p-x-0" })
            </div>
            <div class="form-group row">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}
