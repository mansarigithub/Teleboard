@using Teleboard.Localization.ExtensionMethod;
@model IEnumerable<Teleboard.DomainModel.Core.Tenant>
@{
    ViewBag.Title = Resources.Tenants;
}
<script src="~/Scripts/TenantsYesNoChange.js"></script>
<style>
    .unlocked_active {
        background-color: #d2322d !important;
        border-color: #ac2925 !important;
    }
</style>
<p>
    @Html.ActionLink(Resources.AddNewTenant, "Create", new { }, new { @class = "btn btn-info" })
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <tr>
            <th>
                @Resources.Name
            </th>
            <th>
                @Resources.Description
            </th>
            <th>
                @Html.DisplayName(Resources.ModerationOnChennal)
            </th>
            <th>
                @Html.DisplayName(Resources.ModerationOnTimeBox)
            </th>
            <th>
                @Resources.ModerationOnContent
            </th>
            <th>
                @Resources.Advertisements
            </th>

            <th colspan="3" style="text-align:center">@Resources.Action</th>
        </tr>
        @{ int i = 0;}
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

                <td>
                    @if (item.ContentModeration == false)
                    {
                        <div class="btn-group">
                            @{i = i + 1;}
                            <button type="button" class="btn btn-default unlocked_inactive" id="btnYes_@i" onclick="buttonRedActiveContentModeration(@item.Id);">@Resources.Yes</button>
                            @{i = i + 1;}
                            <button type="button" class="btn btn-danger locked_active" id="btnNo_@i" onclick="buttonGreenInActiveContentModeration(@item.Id);">@Resources.No</button>
                        </div>
                                }
                                else if (item.ContentModeration == true)
                                {
                                    <div class="btn-group">
                                        @{i = i + 1;}
                                        <button type="button" class="btn btn-success locked_active" id="btnYes_@i" onclick="buttonGreenaActiveContentModeration(@item.Id);">@Resources.Yes</button>
                                        @{i = i + 1;}
                                        <button type="button" class="btn btn-default unlocked_inactive" id="btnNo_@i" onclick="buttonRedInActiveContentModeration(@item.Id);">@Resources.No</button>
                                    </div>
                                            }
                </td>

                <td>
                    @if (item.ChennalModeration == true)
                    {
                        <div class="btn-group">
                            @{i = i + 1;}
                            <button type="button" class="btn btn-default unlocked_inactive" id="btnYes_@i" onclick="buttonRedActiveChennalModeration(@item.Id);">@Resources.Yes</button>
                            @{i = i + 1;}
                            <button type="button" class="btn btn-danger locked_active" id="btnNo_@i" onclick="buttonGreenInActiveChennalModeration(@item.Id);">@Resources.No</button>
                        </div>
                                }
                                else if (item.ChennalModeration == false)
                                {
                                    <div class="btn-group">
                                        @{i = i + 1;}
                                        <button type="button" class="btn btn-success locked_active" id="btnYes_@i" onclick="buttonGreenaActiveChennalModeration(@item.Id);">@Resources.Yes</button>
                                        @{i = i + 1;}
                                        <button type="button" class="btn btn-default unlocked_inactive" id="btnNo_@i" onclick="buttonRedInActiveChennalModeration(@item.Id);">@Resources.No</button>
                                    </div>
                                            }

                </td>

                <td>
                    @if (item.TimeBoxModeration == true)
                    {
                        <div class="btn-group">
                            @{i = i + 1;}
                            <button type="button" class="btn btn-default unlocked_inactive" id="btnYes_@i" onclick="buttonRedActiveTimeBoxModeration(@item.Id);">@Resources.Yes</button>
                            @{i = i + 1;}
                            <button type="button" class="btn btn-danger locked_active" id="btnNo_@i" onclick="buttonGreenInActiveTimeBoxModeration(@item.Id);">@Resources.No</button>
                        </div>
                                }
                                else if (item.TimeBoxModeration == false)
                                {
                                    <div class="btn-group">
                                        @{i = i + 1;}
                                        <button type="button" class="btn btn-success locked_active" id="btnYes_@i" onclick="buttonGreenaActiveTimeBoxModeration(@item.Id);">@Resources.Yes</button>
                                        @{i = i + 1;}
                                        <button type="button" class="btn btn-default unlocked_inactive" id="btnNo_@i" onclick="buttonRedInActiveTimeBoxModeration(@item.Id);">@Resources.No</button>
                                    </div>
                                            }
                </td>

                <td>
                    @item.AdvertisementStatus.ToString().Localize()
                </td>
                <td>
                    @Html.ActionLink(Resources.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-success" })<br />
                    @Html.ActionLink(Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-info" })<br />
                    @Html.ActionLink(Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>

                                            }
    </table>

</div>

@section BreadcrumbItems {
    <li class="breadcrumb-item">@Resources.Administration</li>
    <li class="breadcrumb-item">
        <a href="#">@Resources.Tenants</a>
    </li>
}
