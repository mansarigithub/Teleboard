@model IEnumerable<Teleboard.DomainModel.Core.Translate>

@{
    ViewBag.Title = Resources.Translation;
}

<h2>@Resources.Translation</h2>

<p>
    @Html.ActionLink(Resources.AddNewTranslate, "Create", new { }, new { @class = "btn btn-info" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Culture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Culture)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>
        <td>
            @Html.ActionLink(Resources.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-success" })
            @Html.ActionLink(Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-info" })
            @Html.ActionLink(Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
